{
  "version": 2,
  "builds": [
    { "src": "server/index.ts", "use": "@vercel/node" },
    { "src": "client/index.html", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ],
  "buildCommand": "npm run build"
}
